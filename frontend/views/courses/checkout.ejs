<%- include('../partials/header') %>

    <div class="container" style="padding: 4rem 0; display: flex; justify-content: center;">
        <div class="card" style="width: 100%; max-width: 500px; padding: 0;">
            <div
                style="background-color: var(--bg-subtle); padding: 1.5rem; border-bottom: 1px solid var(--border-color);">
                <h2 style="font-size: 1.5rem; margin: 0;">Secure Checkout</h2>
                <div
                    style="display: flex; justify-content: space-between; align-items: center; margin-top: 0.5rem; color: var(--text-muted);">
                    <span>
                        <%= course.title %>
                    </span>
                    <span style="font-weight: 700; color: var(--text-color);">$<%= course.price %></span>
                </div>
            </div>

            <form action="/courses/<%= course.id %>/enroll" method="POST" style="padding: 2rem;">
                <!-- Mock Card Visual -->
                <div
                    style="background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%); color: white; padding: 1.5rem; border-radius: 1rem; margin-bottom: 2rem; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 2rem;">
                        <span style="font-family: monospace; font-size: 1.2rem;">CREDIT CARD</span>
                        <span>üí≥</span>
                    </div>
                    <div style="font-family: monospace; font-size: 1.5rem; letter-spacing: 2px; margin-bottom: 1.5rem;">
                        4242 4242 4242 4242
                    </div>
                    <div style="display: flex; justify-content: space-between; font-family: monospace;">
                        <span>JOHN DOE</span>
                        <span>12/25</span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Cardholder Name</label>
                    <input type="text" value="John Doe" required disabled
                        style="background-color: var(--bg-subtle); color: var(--text-muted); cursor: not-allowed;">
                </div>

                <div class="form-group">
                    <label>Card Number</label>
                    <input type="text" value="4242 4242 4242 4242" required disabled
                        style="background-color: var(--bg-subtle); color: var(--text-muted); cursor: not-allowed;">
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group">
                        <label>Expiry</label>
                        <input type="text" value="12/25" required disabled
                            style="background-color: var(--bg-subtle); color: var(--text-muted); cursor: not-allowed;">
                    </div>
                    <div class="form-group">
                        <label>CVC</label>
                        <input type="text" value="123" required disabled
                            style="background-color: var(--bg-subtle); color: var(--text-muted); cursor: not-allowed;">
                    </div>
                </div>

                <div
                    style="margin-top: 1rem; padding: 1rem; background-color: var(--bg-info); border-radius: 0.5rem; color: var(--text-info); font-size: 0.9rem; margin-bottom: 1.5rem;">
                    ‚ÑπÔ∏è This is a mock payment gateway. No real money will be charged. Click "Pay Now" to simulate a
                    successful transaction.
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%; font-size: 1.1rem; padding: 1rem;">
                    Pay $<%= course.price %> & Enroll
                </button>

                <div style="text-align: center; margin-top: 1rem;">
                    <a href="/courses/<%= course.id %>" style="color: var(--text-muted); font-size: 0.9rem;">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>